<div class="container text-center bg-success p-2 text-dark bg-opacity-10 mt-3">
  <div class="d-inline-flex p-2 bd-highlight m-3">
  <h1><%= @article.title %></h1>
    <%= link_to(edit_article_path) do %>
      <i class="fa-solid fa-pencil"></i>
    <% end %>
    <%= link_to(article_path(@article),
      data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}) do %>
      <i class="fa-solid fa-trash-can"></i>
    <% end %>
  </div>

    <div class="border border-1 mb-3 bg-white text-dark">
      <p><%= @article.content %></p>
    </div>
  <div>
    <button class="btn btn-secondary" type="button"><%= link_to "Back to article index", articles_path, :class => "text-decoration-none text-reset" %></button>
    <button class="btn btn-success" type="button"><%= link_to "Edit this article", edit_article_path, :class => "text-decoration-none text-reset" %></button>
    <button class="btn btn-danger" type="button"><%= link_to "Delete this article",
      article_path(@article),
      data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}, :class => "text-decoration-none text-reset"
      %> </button>
  </div>
</div>
